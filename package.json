{
  "name": "thing-url-adapter",
  "display_name": "Web Thing",
  "version": "0.2.6",
  "description": "Native web thing support",
  "author": "Mozilla IoT",
  "main": "index.js",
  "scripts": {
    "lint": "eslint ."
  },
  "keywords": [
    "mozilla",
    "iot",
    "adapter",
    "wot"
  ],
  "homepage": "https://github.com/mozilla-iot/thing-url-adapter",
  "license": "MPL-2.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/mozilla-iot/thing-url-adapter.git"
  },
  "bugs": {
    "url": "https://github.com/mozilla-iot/thing-url-adapter/issues"
  },
  "files": [
    "LICENSE",
    "SHA256SUMS",
    "thing-url-adapter.js",
    "index.js"
  ],
  "moziot": {
    "api": {
      "min": 2,
      "max": 2
    },
    "enabled": true,
    "plugin": true,
    "exec": "{nodeLoader} {path}",
    "config": {
      "urls": [],
      "bluetoothEnabled": false
    },
    "schema": {
      "type": "object",
      "required": [
        "urls",
        "bluetoothEnabled"
      ],
      "properties": {
        "urls": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "bluetoothEnabled": {
          "type": "boolean"
        }
      }
    }
  },
  "dependencies": {
    "@abandonware/eddystone-beacon-scanner": "^3.0.1-1",
    "dnssd": "^0.4.1",
    "node-fetch": "^2.3.0",
    "ws": "^6.1.2"
  },
  "devDependencies": {
    "eslint": "^5.10.0"
  }
}
